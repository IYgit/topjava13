            // declare bean (not necessary, already have been declared in package declaration above (component-scan base-package)
            <bean class="ru.javawebinar.topjava.service.UserServiceImpl">
                // initialize constructor of bean  by another bean
                <constructor-arg name="repository" ref="mockUserRepository"/>  // not necessary, already initialised as @Autowired
                // initialize field of bean  by another bean
                <property name="repository" ref="mockUserRepository"/>
            </bean>
     -->

</beans>