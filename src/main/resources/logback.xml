<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- To enable JMX Management -->
    <jmxConfigurator/>

    <!-- логвування в файл -->
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <!-- TOPJAVA_ROOT встановлена як змінна середовища в ~/.bash_profile:
            export TOPJAVA_ROOT="/home/iy/IntellijIDEA/Intership/topjava"-->
        <file>${TOPJAVA_ROOT}/log/topjava.log</file>
        <!--<file>/home/iy/IntellijIDEA/Intership/topjava/log/topjava.log</file>-->

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date %-5level %logger{0} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- логування в консоль -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-5level %logger{0} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- рівень логування для пакета ru.javawebinar.topjava debug-->
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <!--рівень логування по замовчанню info-->
    <root level="info">
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </root>
</configuration>
